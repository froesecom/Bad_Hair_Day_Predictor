<% if flash[:notice].present? %>
<h2> <%= flash[:notice] %> </h2>

<% form_tag '/login' do  %>
  <div>
    <%= label_tag 'name' %> 
    <%= text_field_tag 'name', nil, :autofocus => true, :placeholder => 'login', :class => 'form-control' %> 
  </div>
  <div>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password', nil, :class => 'form-control' %> 
    <%=  submit_tag 'Login', :class => 'btn btn-info' %> 
  </div>
<% end %>