
<%= form_for @hairstyle, :html => { :class => "hairstyle_form"} do |f| %> 
  <%= f.label :style_name %> 
  
  <%= f.text_field :style_name, :autofocus => true, :required => true %><br>
  
  <%= f.label "How long is your hair?" %>
  <%= f.select :length, @length %>

  <%= f.label "How curly is your hair?" %>
  <%= f.select :curliness, @curliness %>

  <%= f.label "When did you last wash your hair?" %>
  <%= f.select :hygiene, @hygiene %>
  
  <label for="modification">Do you have any of the following? </label><br>
    <!-- This bullshit piece of code does three things: creates the check boxes, and pre-checks boxes that are included in the string-->
    <% @modification.each do |modification, value| %>
      <input type="checkbox" value="<%= modification %>" <% if @user_modification.include?modification %> checked <% end %> name="modifications[]"><%= modification %><br>
    <% end %>
 
  <%= f.submit %>  
 <% end %>
  